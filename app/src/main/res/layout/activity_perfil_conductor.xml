<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conductor.PerfilConductor">

    <LinearLayout
        android:id="@+id/linearLayoutPerfilConductor"
        android:layout_width="353dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtPerfilCondutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Perfil del Conductor"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFotoConductor"
        android:layout_width="177dp"
        android:layout_height="124dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutPerfilConductor">

        <ImageView
            android:id="@+id/imgFotoConductor"
            android:layout_width="160dp"
            android:layout_height="94dp"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearNombrePerfilConductor"
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFotoConductor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp">

        <TextView
            android:id="@+id/txtNombrePerfilConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombres y Apellidos" />

        <TextView
            android:id="@+id/txtNombrePerfilConductorDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Luis Ariel Castillo Estupiñan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearApellidoPerfilConductor"
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearNombrePerfilConductor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp">

        <TextView
            android:id="@+id/txtApellidoPerfilConductor"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha Nacimiento" />

        <TextView
            android:id="@+id/txtApellidoPerfilConductorDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="06-04-1988" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearViajesPerfilConductor"
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearApellidoPerfilConductor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp">

        <TextView
            android:id="@+id/txtViajesPerfilConductor"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Género" />

        <TextView
            android:id="@+id/txtViajesPerfilConductorDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masculino" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearValoracionPerfilConductor"
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearViajesPerfilConductor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp">

        <TextView
            android:id="@+id/txtValoracionPerfilConductor"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Correo Electrónico" />

        <TextView
            android:id="@+id/txtValoracionPerfilConductorDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="arielcastillo.es@hotmail.com" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearTituloPerfilConductor"
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearValoracionPerfilConductor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp">

        <TextView
            android:id="@+id/txtTituloComentariosPerfilConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Viajes Realizados" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutValoracionConductor"
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearTituloPerfilConductor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp">

        <TextView
            android:id="@+id/txtValoracionConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Viajes Realizados" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtComentariosValoracionConductor"
        android:layout_width="358dp"
        android:layout_height="69dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTituloPerfilConductor" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993"
        app:srcCompat="@drawable/homescreen" />

</androidx.constraintlayout.widget.ConstraintLayout>