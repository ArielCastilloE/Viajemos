<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegistrarUsuarioPpal">

    <LinearLayout
        android:id="@+id/linearLayoutRegistro"
        android:layout_width="279dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Registra tu cuenta"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRegistroPrincipal"
        android:layout_width="335dp"
        android:layout_height="102dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRegistro">

        <EditText
            android:id="@+id/txtUsrRegistroPpal"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/englebert"
            android:hint="Ingresa tu usuario"
            android:inputType="textPersonName"
            android:textColor="#090000" />

        <EditText
            android:id="@+id/txtPassRegistroPpal"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/englebert"
            android:hint="Ingresa tu contraseÃ±a"
            android:inputType="textPassword"
            android:textColor="#090000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTipoDocumentoConductor"
        android:layout_width="333dp"
        android:layout_height="36dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRegistroPrincipal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtTipoDocConductor"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/englebert"
            android:hint="Perfil: "
            android:inputType="textPersonName"
            android:textColor="#070707"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinPerfil"
            android:layout_width="156dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRegistroPpal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTipoDocumentoConductor"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>